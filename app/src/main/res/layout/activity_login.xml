<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/raizLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado">

    <LinearLayout
        android:id="@+id/contenedorLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo de la app -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/cd_app_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Título de la app -->
        <TextView
            android:id="@+id/txtTituloApp"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0C151D"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Bienvenida -->
        <TextView
            android:id="@+id/txtBienvenida"
            android:text="@string/welcome_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0C151D"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Usuario -->
        <EditText
            android:id="@+id/edtUsuario"
            android:hint="@string/hint_username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/fondo_redondeado"
            android:padding="16dp"
            android:textColor="#0C151D"
            android:textColorHint="#8A8A8A"
            android:drawableStart="@drawable/ic_usuario"
            android:drawablePadding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text|textNoSuggestions"
            android:autofillHints="username"
            android:imeOptions="actionNext"/>

        <!-- Contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:endIconMode="password_toggle"
            app:boxBackgroundMode="none"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtContrasena"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/fondo_redondeado"
                android:padding="16dp"
                android:textColor="#0C151D"
                android:textColorHint="#8A8A8A"
                android:drawableStart="@drawable/ic_contrasena"
                android:drawablePadding="12dp"
                android:autofillHints="password"
                android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Iniciar Sesión -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIniciarSesion"
            android:text="@string/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#359DFF"
            app:cornerRadius="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Registrarse -->
        <TextView
            android:id="@+id/txtRegistrarse"
            android:text="@string/link_sign_up"
            android:textColor="#4574A1"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"/>

        <!-- Olvidé mi contraseña -->
        <TextView
            android:id="@+id/txtOlvideContrasena"
            android:text="@string/link_forgot_password"
            android:textColor="#4574A1"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
