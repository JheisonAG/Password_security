<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/raizRegistrarse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado">

    <LinearLayout
        android:id="@+id/contenedorRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogoRegistro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/cd_app_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloRegistro"
            android:text="@string/title_register"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0C151D"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Nombre completo -->
        <EditText
            android:id="@+id/edtNombreCompleto"
            android:hint="@string/hint_full_name"
            android:inputType="textPersonName|textCapWords"
            android:autofillHints="name"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/fondo_redondeado"
            android:padding="16dp"
            android:textColor="#0C151D"
            android:textColorHint="#8A8A8A"
            android:drawableStart="@drawable/ic_usuario"
            android:drawablePadding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Correo electrónico -->
        <EditText
            android:id="@+id/edtCorreo"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/fondo_redondeado"
            android:padding="16dp"
            android:textColor="#0C151D"
            android:textColorHint="#8A8A8A"
            android:drawableStart="@drawable/ic_correo"
            android:drawablePadding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/edtContrasenaRegistro"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:autofillHints="newPassword"
            android:imeOptions="actionNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/fondo_redondeado"
            android:padding="16dp"
            android:textColor="#0C151D"
            android:textColorHint="#8A8A8A"
            android:drawableStart="@drawable/ic_contrasena"
            android:drawablePadding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Confirmar contraseña -->
        <EditText
            android:id="@+id/edtConfirmarContrasena"
            android:hint="@string/hint_confirm_password"
            android:inputType="textPassword"
            android:autofillHints="newPassword"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/fondo_redondeado"
            android:padding="16dp"
            android:textColor="#0C151D"
            android:textColorHint="#8A8A8A"
            android:drawableStart="@drawable/ic_contrasena"
            android:drawablePadding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón Registrarse -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrarse"
            android:text="@string/btn_register"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#359DFF"
            app:cornerRadius="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Ya tienes cuenta -->
        <TextView
            android:id="@+id/txtYaTengoCuenta"
            android:text="@string/link_already_have_account"
            android:textColor="#4574A1"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
